<% if param == "programs"%>

  <form action="/admin/programs" method="POST">
    <textarea class="form-control" name="page[text]" rows="20" id="textArea">
      <%= text %>
    </textarea>

 <%else%>

  <form action="/admin/programs/<%= param %>" method="POST">
    <textarea class="form-control" name="page[text]" rows="20" id="textArea">
      <%= text %>
    </textarea>
 <%end%>
  <button type="submit" class="btn btn-primary">SUBMIT</button>
  <input type="hidden" name="_method" value="PUT" />
  
 </form>
