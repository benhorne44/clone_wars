<% if param == "about"%>

  <form action="/admin/about" method="POST">
    <textarea class="form-control" name="page[text]" rows="20" id="textArea">
      <%= text %>
    </textarea>
    <button type="submit" class="btn btn-primary">SUBMIT</button>
    <input type="hidden" name="_method" value="PUT" />
  </form>

<%else%>

  <form action="/admin/about/<%= param %>" method="POST">
    <textarea class="form-control" name="page[text]" rows="20" id="textArea">
      <%= text %>
    </textarea>
    <button type="submit" class="btn btn-primary">SUBMIT</button>
    <input type="hidden" name="_method" value="PUT" />
  </form>

<%end%>
